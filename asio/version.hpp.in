#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define ASIO_VERSION       $asio.version.project_number$ULL
#define ASIO_VERSION_STR   "$asio.version.project$"
#define ASIO_VERSION_ID    "$asio.version.project_id$"
#define ASIO_VERSION_FULL  "$asio.version$"

#define ASIO_VERSION_MAJOR $asio.version.major$
#define ASIO_VERSION_MINOR $asio.version.minor$
#define ASIO_VERSION_PATCH $asio.version.patch$

#define ASIO_PRE_RELEASE   $asio.version.pre_release$

#define ASIO_SNAPSHOT_SN   $asio.version.snapshot_sn$ULL
#define ASIO_SNAPSHOT_ID   "$asio.version.snapshot_id$"
